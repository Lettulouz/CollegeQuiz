@using CollegeQuizWeb.Dto
@using CollegeQuizWeb.Utils
@using Microsoft.AspNetCore.Http
@model CollegeQuizWeb.Dto.LoginDto


<ul class="navbar-nav flex-grow-1 justify-content-end">
    <li class="nav-item">
        <a class="nav-link p-3" asp-area="" asp-controller="" asp-action="Index">STRONA GŁÓWNA</a>
    </li>
    <hr class="dropdown-divider m-0">
    <li class="nav-item">
        <a class="nav-link p-3" asp-area="" asp-controller="" >STWÓRZ QUIZ</a>
    </li>
    <hr class="dropdown-divider m-0">
    <li class="nav-item">
        <a class="nav-link p-3" asp-area="" asp-controller="" >DOŁĄCZ</a>
    </li>
    
    @if(Context.Session.GetString(SessionKey.IS_USER_LOGGED)==null)
    {
        <hr class="dropdown-divider m-0">
        <li class="nav-item">
            <a class="nav-link p-3" asp-area="" asp-controller="Auth" asp-action="Login">ZALOGUJ</a>
        </li>
        <hr class="dropdown-divider m-0">
        <li class="nav-item">
            <a class="nav-link p-3 list-border" asp-area="" asp-controller="Auth" asp-action="Register">REJESTRACJA</a>
        </li> 
        
    }
    else
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle p-3" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                @Context.Session.GetString(SessionKey.IS_USER_LOGGED) <i class="bi bi-person"></i>
            </a>
            <ul class="dropdown-menu dropdown-menu-end">

                <li>
                    <a class="dropdown-item mt-1" asp-area="" asp-controller="Auth" asp-action="Logout">
