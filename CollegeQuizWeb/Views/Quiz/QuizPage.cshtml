@{
    ViewData["Title"] = $"Quiz {ViewBag.QuizData.Name}";
}

<div class="mt-3 mb-3">
    <a class="btn btn-color-one fit-content text-white w-100 my-1" asp-action="MyQuizes" asp-controller="Quiz">
        <i class="bi bi-arrow-left me-2"></i> Powrót do quizów
    </a>
</div>

<h2>@ViewBag.QuizData.Name</h2>

<div class="position-relative">
    <div class="position-absolute d-flex justify-content-center align-content-center w-100 load-spinner"
         id="react-loadable-spinner-content">
        <div class="spinner-border load-spinner-circle mt-4" role="status">
        </div>
    </div>
    <div class="mt-3" id="addQuizQuestionsRoot"></div>
</div>

<script type="module" src="@Url.Content("~/js/react/QuizQuestions.jsx")"></script>

<script lang="js">
    window.onbeforeunload = function() {
        return "Czy na pewno chcesz przeładować stronę? Niezapisane dane zostaną bezpowrotnie utracone!";
    };
</script>