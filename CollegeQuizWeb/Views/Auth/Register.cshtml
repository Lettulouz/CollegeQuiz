@using Microsoft.AspNetCore.Mvc.TagHelpers
@model CollegeQuizWeb.Dto.RegisterDto
@{
    ViewData["Title"] = "Registration Page";
}

@if (ViewBag.AlertMessage != null)
{
<div class="container mt-5 mb-0">
    <div class="row d-flex justify-content-center mt-5 mb-0">
        <div class="col-12 col-lg-6 mb-0">
            <div class="alert @ViewBag.Type alert-dismissible fade show mb-0" role="alert">
                @Html.Raw(ViewBag.AlertMessage)
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    </div>
</div>
}



<div class="container mt-5 mb-1">
    <div class="row d-flex justify-content-center mt-5">
        <div class="col-12 col-lg-6 mb-5">
            <div class="card px-5 py-5 h-100">
                <form method="post" asp-controller="Auth" asp-action="Register">
                    <div class="form-data" id="registerFields">
                        <label id="mainName">Rejestracja</label>
                        <div class="forms-inputs mb-4">
                            <label>Imię</label>
                            <input type="text" asp-for="FirstName" autocomplete="on">
                            <span class="mx-2 mt-1 errorTextColor" asp-validation-for="FirstName"></span>
                        </div>

                        <div class="forms-inputs mb-4">
                            <label>Nazwisko</label>
                            <input type="text" asp-for="LastName">
                            <span class="mx-2 mt-1 errorTextColor" asp-validation-for="LastName"></span>
                        </div>

                        <div class="forms-inputs mb-4">
                            <label id="username">Login</label>
                            <input type="text" asp-for="Username">
                            <span class="mx-2 mt-1 errorTextColor" asp-validation-for="Username"></span>
                        </div>

                        <div class="forms-inputs mb-4">
                            <label id="password">Hasło</label>
                            <input type="password" asp-for="Password">
                            <span class="mx-2 mt-1 errorTextColor" asp-validation-for="Password"></span>
                        </div>

                        <div class="forms-inputs mb-4">
                            <label id="email">Email</label>
                            <input type="email" asp-for="Email">
                            <span class="mx-2 mt-1 errorTextColor" asp-validation-for="Email"></span>
                        </div>

                        <div class="forms-check mb-4 custom-control custom-checkbox">
                            <input class="form-check-input" type="checkbox" value="true" asp-for="RulesAccept">
                            <label class="form-check-label d-inline" asp-for="RulesAccept">
                                Akceptuję <a asp-action="Regulation" asp-controller="Home">regulamin strony</a>
                                oraz politykę prywatności.
                            </label>
                            <span class="mx-2 mt-1 d-flex errorTextColor" asp-validation-for="RulesAccept"></span>
                        </div>

                        <div class="mb-3">
                            <button class="btn-color-one w-100" name="registerSubmit" type="submit">Rejestracja</button>
                        </div>
                        <div>
                            <a class="btn btn-color-two w-100" asp-action="Login" asp-controller="Auth">Mam już konto</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>