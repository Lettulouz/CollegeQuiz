@model CollegeQuizWeb.Dto.LoginDto
@{
    ViewData["Title"] = "Logowanie";
}

<div class="container mt-5 mb-1">
    <div class="row d-flex justify-content-center mt-5">
        <div class="col-12 col-md-6 mb-5">
            <div class="card px-5 py-5 h-100" id="form1">
                @if (ViewBag.ChangePassMessage != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @ViewBag.ChangePassMessage
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                <form method="post" asp-action="Login">
                    <div class="form-data" id="registerFields">
                        <label id="mainName">Logowanie</label>
                        <div class="forms-inputs mb-4">
                            <label id="username">Login lub E-mail</label>
                            <input type="text" asp-for="LoginOrEmail">
                            <span class="mx-2 mt-1 errorTextColor" asp-validation-for="LoginOrEmail"></span>
                        </div>

                        <div class="forms-inputs mb-4">
                            <label id="password">Hasło</label>
                            <input type="password" asp-for="Password">
                            <span class="mx-2 mt-1 errorTextColor" asp-validation-for="Password"></span>
                        </div>
                    </div>

                     <div class="mb-3">
                        <button class="btn btn-dark w-100" name="loginSubmit" type="submit">Zaloguj</button>
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-light w-100" onclick="moveToRegister()">Załóż konto</button>
                    </div>
                    <div class="text-center">
                        <a asp-action="AttemptChangePassword" asp-controller="Auth">Zapomniałem hasła</a>
                    </div>
                </form>
                
            </div>
        </div>
    </div>
</div>