@using CollegeQuizWeb.Entities
@model dynamic

@{
    Layout= "_AdminLayout";
    ViewData["Title"] = "Lista użytkowników";
}

<div class="container-fluid">
    @foreach (var user in ViewBag.users)
    {
        <div class='row  p-2'>
            <div class="user-card col-12 col-md-7">
                <div class="row">
                    <div class='col-2 col-lg-1 text-center '><i class='bi bi-person' style='font-size:50px;'></i>
                    </div>
                    <div class='col-10 col-lg-10 ps-2  ps-xl-2'>
                        <div class="row">
                            <div class='col-12 user-car-header'>
                                @user.Username
                            </div>
                        </div>
                        <div class="row">
                            <div class='col-md-7 align-self-center d-block'>
                                <p class="mb-1">@user.FirstName @user.LastName</p>
                                <p>Email: @user.Email</p>
                            </div>
                            <div class='col-md-4 align-self-center d-block p-1'>
                                <div class="btn-group btn-group-sm">
                                  <a  class="btn btn-sm btn-dark"><i class="bi bi-eye-fill"></i></a>
                                  <a  class="btn btn-sm btn-dark"><i class="bi bi-gear-fill"></i></a>
                                  <a class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></a>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    }
    


</div>

<script>
    document.getElementById('users_collapse').classList.add('show');
    document.getElementById('users_collapse_btn').setAttribute( 'aria-expanded', 'true' );
    document.getElementById('users_collapse_btn').setAttribute( 'style', 'color:white !important' );
    document.getElementById('users_list').setAttribute( 'style', 'color:white !important' );

</script>